{
    "name": "vscode-modern-vhdl-support",
    "displayName": "Modern VHDL",
    "description": "Modern VHDL Language Support",
    "version": "0.0.1",
    "license": "MIT",
    "engines": {
        "vscode": "^1.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/richjyoung/vscode-modern-vhdl.git"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "vhdl",
                "aliases": [
                    "VHDL",
                    "vhdl"
                ],
                "extensions": [
                    ".vhd",
                    ".vhdl",
                    ".vho"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "vhdl",
                "scopeName": "source.vhdl",
                "path": "./syntaxes/vhdl.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "yaml2js": "js-yaml ./syntaxes/vhdl.tmLanguage.yml > ./syntaxes/vhdl.tmLanguage.json"
    },
    "devDependencies": {
        "js-yaml": "^3.12.2"
    }
}
